{
  "name": "keri",
  "version": "0.0.8",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json --watch",
    "test": "node --test --test-reporter=spec --no-warnings --experimental-strip-types",
    "test:integration": "npm test -- 'test_integration/**/*.ts'",
    "test:scripts": "node --no-warnings scripts/run-scripts.ts",
    "test:example": "./test_examples.sh",
    "lint": "eslint",
    "check": "tsc --noEmit",
    "clean": "node scripts/clean.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "bin": {
    "keri": "dist/cli/main.js"
  },
  "exports": {
    ".": "./dist/main.js",
    "./storage-sqlite": "./dist/db/storage-sqlite.js"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "author": "Daniel LenksjÃ¶",
  "license": "Apache-2.0",
  "description": "KERI for JavaScript",
  "devEngines": {
    "runtime": {
      "name": "node",
      "version": ">=24",
      "onFail": "warn"
    },
    "packageManager": {
      "name": "npm",
      "version": ">=11",
      "onFail": "warn"
    }
  },
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@noble/curves": "^2.0.0",
    "@noble/ed25519": "^3.0.0",
    "@noble/hashes": "^2.0.0",
    "@noble/secp256k1": "^3.0.0",
    "cesr": "^0.0.20",
    "commander": "^14.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@hono/node-server": "^1.19.3",
    "@types/node": "^22.15.30",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.15.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1"
  }
}
