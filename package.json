{
  "name": "kerijs-workspace",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "lint": "pnpm -r lint && prettier --check .",
    "lint:fix": "pnpm -r lint --fix && prettier --write .",
    "build": "pnpm -r build",
    "dev": "pnpm run --parallel dev",
    "test": "pnpm -r test",
    "clean": "node --no-warnings --experimental-strip-types scripts/clean.ts",
    "configure": "node --no-warnings --experimental-strip-types scripts/configure.ts",
    "codegen": "node --no-warnings --experimental-strip-types scripts/generate-encoding.ts",
    "set-version": "node --no-warnings --experimental-strip-types scripts/set-version.ts"
  },
  "type": "module",
  "author": "",
  "license": "ISC",
  "description": "",
  "engines": {
    "node": ">=22"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/node": "^22.9.1",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "ts-morph": "^25.0.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.23.0"
  }
}
