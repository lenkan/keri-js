{
  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "moduleResolution": "nodenext",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "paths": {
      "signify-ts": ["../signify-ts/src"]
    }
  }
}
