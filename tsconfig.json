{
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "lib": ["ES2024"],
    "module": "nodenext",
    "noEmit": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "erasableSyntaxOnly": true
  }
}
